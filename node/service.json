{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "events": {
    "OrderStatusUpdated": {
      "sender": "vtex.orders-broadcast",
      "topics": ["order-status-updated"]
    }
  },
  "routes": {
    "hcheck": {
      "path": "/_v/hcheck",
      "public": true
    },
    "getPoints": {
      "path": "/_v/get-points/:user_id",
      "public": true
    },
    "debitPoints": {
      "path": "/_v/debit-points/:user_id",
      "public": true
    }
  }
}
