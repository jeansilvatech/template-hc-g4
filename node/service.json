{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "events": {
    "receivedOrder": {
      "sender": "vtex.bitsized-g4-backend-api",
      "keys": ["send-event"]
    }
  },
  "routes": {
    "hcheck": {
      "path": "/_v/hcheck",
      "public": true
    },
    "status": {
      "path": "/_v/status/:code",
      "public": true
    },
    "getPoints": {
      "path": "/_v/get-points",
      "public": true
    },
    "debitPoints": {
      "path": "/_v/debit-points",
      "public": true
    }
  }
}
